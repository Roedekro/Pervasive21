<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.pervasive2.pervasive2" >

    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Strategy1"
            android:label="@string/title_activity_strategy1" >
        </activity>
        <activity
            android:name=".Strategy2"
            android:label="@string/title_activity_strategy2" >
        </activity>
        <activity
            android:name=".Strategy3"
            android:label="@string/title_activity_strategy3" >
        </activity>
        <activity
            android:name=".Strategy4"
            android:configChanges="orientation"
            android:label="@string/title_activity_strategy4"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".KMLBuilderActivity"
            android:label="@string/title_activity_kmlbuilder" >
        </activity>

        <receiver android:name="Receiver" />
    </application>

</manifest>
